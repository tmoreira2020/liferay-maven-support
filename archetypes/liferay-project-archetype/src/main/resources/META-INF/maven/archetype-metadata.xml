<?xml version="1.0"?>

<archetype-descriptor
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
	name="liferay-project-archetype">
	<requiredProperties>
		<requiredProperty key="hostname">
			<defaultValue>project.liferay.com</defaultValue>
		</requiredProperty>
	</requiredProperties>
	<fileSets>
		<fileSet filtered="true">
			<directory>src/main/profiles</directory>
		</fileSet>
		<fileSet filtered="true">
			<directory>src/main/puppet/modules/hosts/manifests</directory>
		</fileSet>
		<fileSet filtered="true">
			<directory>src/main/puppet/modules/nginx/templates</directory>
		</fileSet>
		<fileSet filtered="false">
			<directory>src/main/puppet</directory>
		</fileSet>
	</fileSets>
	<modules>
		<module dir="exts" name="exts" />
		<module dir="webs" name="webs" />
		<module dir="hooks" name="hooks" />
		<module dir="portlets" name="portlets" />
		<module dir="themes" name="themes" />
		<module dir="layouts" name="layouts" />
	</modules>
</archetype-descriptor>